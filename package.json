{
  "name": "vision_dashboard",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "packages/email/*"
  ],
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "dev": "turbo dev --parallel",
    "test": "turbo test --parallel",
    "start:dashboard": "turbo start --filter=@vision_dashboard/dashboard",
    "start:website": "turbo start --filter=@vision_dashboard/website",
    "dev:dashboard": "turbo dev --filter=@vision_dashboard/dashboard",
    "build:dashboard": "turbo build --filter=@vision_dashboard/dashboard",
    "dev:desktop": "turbo dev --filter=@vision_dashboard/desktop",
    "format": "biome format --write .",
    "lint": "turbo lint && manypkg check",
    "typecheck": "turbo typecheck"
  },
  "dependencies": {
    "@biomejs/biome": "1.9.4",
    "@manypkg/cli": "^0.24.0",
    "turbo": "2.5.6",
    "typescript": "^5.9.2"
  },
  "packageManager": "bun@1.2.21",
  "devDependencies": {
    "depcheck": "^1.4.7"
  }
}
